[MAIN]
# Minimum Python version
py-version=3.10

# Ignore test files for some checks
ignore-patterns=test_.*\.py

[MESSAGES CONTROL]
# Disable specific warnings that are too strict for this project
disable=
    # Allow fewer public methods for Protocol/ABC classes
    too-few-public-methods,
    # Allow f-strings in logging (modern Python practice)
    logging-fstring-interpolation,

[FORMAT]
# Maximum line length
max-line-length=100

[DESIGN]
# Maximum number of arguments for functions
max-args=8

# Maximum number of local variables
max-locals=20

[SIMILARITIES]
# Minimum lines of similarity
min-similarity-lines=6